{
  "name": "@webloom/database",
  "version": "0.0.0",
  "private": true,
  "main": "src/index.ts",
  "scripts": {
    "db:push": "drizzle-kit push:pg",
    "db:reset": "ts-node ./src/scripts/reset && pnpm db:push",
    "db:studio": "drizzle-kit studio --verbose",
    "db:generate": "drizzle-kit generate:pg",
    "db:migrate": "pnpm db:generate && ts-node ./src/scripts/migrate",
    "clear": "rm -rf node_modules dist .turbo"
  },
  "dependencies": {
    "drizzle-orm": "^0.29.3",
    "@webloom/constants": "workspace:^",
    "@webloom/permissions": "workspace:*",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "@tooling/typescript": "workspace:*",
    "@types/pg": "^8.10.9",
    "drizzle-kit": "^0.20.13",
    "ts-node": "^10.9.1"
  }
}
